<h1>Listing Programs</h1>

<%= form_tag(programs_path, :method => "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q,params[:q]) %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @programs.each do |program| %>
  <tr>
    <td><%= program.title %></td>
    <td><%= program.subtitle %></td>
    <td><%= program.description %></td>
    <td><%= link_to 'Show', program %></td>
    <td><%= link_to 'Destroy', program, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Program', new_program_path %>
